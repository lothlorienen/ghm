{{#>blocks/common/section title="Обратная связь" title-center=1}}
  <div class="section__content">
    <form class="js-form" data-api-url="location.href">
      <div class="form js-form__container">
        <div class="form__container form__container--15">
          {{>form/input placeholder="Ваше имя" field-name="name" validation="isNotEmpty"}}
          <div class="form__group">
            {{>form/input placeholder="E-mail" field-name="email" type="email" inputmode="email" validation="isValidEmail,isNotEmpty"}}
            {{>form/input
                data-mask="+{7} (000) 000-00-00"
                placeholder="+7 (___) ___ __ __"
                type="tel"
                inputmode="tel"
                input-class="js-masked-input"
                validation="isValidPhone,isNotEmpty"
                field-name="phone"
            }}
          </div>
          {{>form/textarea placeholder="Ваше сообщение" validation="isNotEmpty" field-name="Сообщение"}}
          <p class="form__row-title">куда удобнее получить ответ</p>
          <div class="form__group">
            {{>form/checkbox label="E-mail" field-name="чекбокс E-mail" validation="isValidEmail,isNotEmpty"}}
            {{>form/checkbox label="Телефон" field-name="чекбокс Телефон" validation="isNotEmpty"}}
          </div>
          <div class="form__submit">
            {{>ui/btn-arrow button=1 type="submit" label="Отправить" btn-mode='inline'}}
          </div>
        </div>
      </div>
    </form>
  </div>
{{/blocks/common/section}}
