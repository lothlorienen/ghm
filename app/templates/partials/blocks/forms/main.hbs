{{#>blocks/common/section title="Обратная связь" title-center=1}}
  <div class="section__content">
    <form>
      <div class="form">
        <div class="form__container form__container--15">
          {{>form/input placeholder="Ваше имя"}}
          <div class="form__group">
            {{>form/input placeholder="E-mail" type="email" inputmode="email"}}
            {{>form/input placeholder="+7 ___ ___ __ __" type="tel" inputmode="tel"}}
          </div>
          {{>form/textarea placeholder="ВашЕ сообщение"}}
          <p class="form__row-title">куда удобнее получить ответ</p>
          <div class="form__group">
            {{>form/checkbox label="E-mail"}}
            {{>form/checkbox label="Телефон"}}
          </div>
          <div class="form__submit">
            {{>ui/btn-arrow button=1 type="submit" label="Отправить" btn-mode='inline'}}
          </div>
        </div>
      </div>
    </form>
  </div>
{{/blocks/common/section}}
